<div class="col-md-8">
    <div class="jumbotron">
        <div class="col-md-12">
            <div class="form-group">
                <%= link_to customer_list_url do %>
                    <button class="btn btn-danger btn-sm"><i class="glyphicon glyphicon-chevron-left"></i> Back </button>
                <% end %>
            </div>
            <hr />
            <div class="col-md-6">
                <%= form_tag :action => 'add' do %>
                    <div class="form-group">
                        <h4>Create New Customer</h4>
                    </div>
                    <div class="form-group">
                        <label for="CustomerNo">Customer No:</label>
                        <%= text_field 'customer', 'CustomerNo', class: 'input'%>
                    </div>
                    <div class="form-group">
                        <label for="FirstName">First Name:</label>
                        <%= text_field 'customer', 'FirstName', class: 'input'%>
                    </div>
                    <div class="form-group">
                        <label for="LastName">Last Name:</label>
                        <%= text_field 'customer', 'LastName', class: 'input'%>
                    </div>
                    <div class="form-group">
                        <label for="Email">Email:</label> 
                        <%= text_field 'customer', 'Email', class: 'input'%>
                    </div>
                    <div class="form-group">
                        <label for="PhoneNo">Phone Number:</label>
                        <%= text_field 'customer', 'PhoneNo', class: 'input'%>
                    </div>
                    <div class="form-group">
                        <label for="PIN">PIN:</label>
                        <%= text_field 'customer', 'PIN', class: 'input'%>
                    </div>
                    <div class="form-group text-right">
                        <%= submit_tag("Create",  class: 'btn btn-success', style: 'margin-right:60px') %>
                    </div>
                <% end%>
            </div>
        </div>
        <div class="clearfix"></div>
    </div>
</div>