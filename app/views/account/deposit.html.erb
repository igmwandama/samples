<div class="col-md-8">
    <div class="jumbotron">
        <div class="form-group">
            <%= link_to :action => 'details', :AccountNo => @activity.AccountNo do %>
                <button class="btn btn-danger btn-sm"><i class="glyphicon glyphicon-chevron-left"></i> Back </button>
            <% end %>
            <hr />
        </div>
        <div class="col-md-5">
            <%= form_tag :action => 'push' do %>
                <div class="form-group"><h4>Deposit Money</h4></div>
                <hr />
                <div class="form-group">
                    <label for="Amount">Amount:</label>
                    <%= hidden_field 'activity', 'AccountNo', class: 'input'%>
                    <%= text_field 'activity', 'Amount', class: 'input'%>
                </div>
                <div class="form-group text-right" style="padding-right: 16px;">
                    <%= submit_tag("Deposit", class: 'btn btn-success')%>
                </div>
            <% end %>
        </div>
        <div class="clearfix"> </div>
    </div>
</div>