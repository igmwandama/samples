<div class="col-md-8">
    <div class="jumbotron">
        <div class="col-md-8">
            <%= form_tag :action => 'add' do %>
                <div class="form-group">
                    <h3>Create Account For <%= @customer.FirstName %> <%= @customer.LastName %></h3>
                    <hr />
                </div>
                <div class="form-group">
                    <label for="AccountNo">Account No:</label>
                    <%= text_field 'account', 'AccountNo', :class => 'input', :maxlength => 10, :size => 20%>
                    <br />
                    <span style="margin-left: 110px;">Maximum of 10 characters</span>
                    <%= hidden_field 'account', 'CustomerNo', :class => 'input'%>
                </div>
                <div class="form-group">
                    <label for="Balance">Balance: </label>
                    <%= text_field 'account', 'Balance', :class => 'input' %>
                </div>
                <div class="form-group">
                    <%= submit_tag("Create",  class: 'btn btn-success') %>
                </div>
            <% end%>
        </div>
        <div class="clearfix"></div>
    </div>
    
</div>