<div class="col-md-8">
    <div class="jumbotron">
        <div class="form-group">
            <h3 class="dispaly-3">Customer Accounts</h3>
            <hr style="margin-bottom: 5px;"/>
            <div class="form-group">
                <%= link_to 'Customers', customer_list_path, :class => "btn btn-default" %>
                <hr style="margin-top: 5px;"/>
            </div>
            
            <div class="col-md-8" style="float:none; margin: 0 auto;">
                <table class="table table-striped table-condensed">
                    <thead><tr><th>ACCOUNT NAME</th><th>ACCOUNT NUMBER</th></tr></thead>
                    <tbody>
                        <% @accounts.each do |a|
                            c = Customer.find(a.CustomerNo)
                        %>
                            <tr><td><%=c.FirstName %> <%= c.LastName%></td><td><%= a.AccountNo%>
                                <%= link_to 'Open', {:action => 'details', :AccountNo => a.AccountNo}, :class => 'btn btn-sm btn-success' %></td></tr>
                        <% end%>
                    </tbody>
                </table>
            </div>
            <div class="clearfix">
        </div>
    </div>
</div>